{
  "name": "@propertyapp/backend-node",
  "version": "1.0.0",
  "description": "Backend Express Server for the PropertyApp",
  "private": true,
  "main": "build/server.js",
  "scripts": {
    "build": "tsc -b tsconfig.build.json",
    "start": "NODE_ENV=development nodemon src/server.ts",
    "start:prod": "NODE_ENV=production npm run build && node build/server.js",
    "test": "NODE_ENV=test NODE_OPTIONS=--dns-result-order=ipv4first jest --verbose=true --testTimeout=30000 --hookTimeout=30000 --detectOpenHandles --coverage=false",
    "test:watch": "NODE_ENV=test NODE_OPTIONS=--dns-result-order=ipv4first jest --verbose=true --testTimeout=30000 --hookTimeout=30000 --detectOpenHandles --watchAll",
    "test:coverage": "NODE_ENV=test NODE_OPTIONS=--dns-result-order=ipv4first jest --verbose=true --testTimeout=30000 --hookTimeout=30000 --detectOpenHandles --coverage",
    "clear-jest": "jest --clearCache",
    "lint": "eslint --ignore-path ../.gitignore ."
  },
  "author": "Brunel Johnson",
  "license": "ISC",
  "devDependencies": {
    "@types/compression": "^1.7.2",
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.3",
    "@types/morgan": "^1.9.4",
    "@types/multer": "^1.4.7",
    "@types/node": "^20.4.9",
    "@types/sqlite3": "^3.1.8",
    "@types/supertest": "^2.0.12",
    "@types/swagger-jsdoc": "^6.0.1",
    "@types/swagger-ui-express": "^4.1.3",
    "@types/uuid": "^9.0.2",
    "@types/validator": "^13.11.1",
    "@typescript-eslint/eslint-plugin": "^6.3.0",
    "@typescript-eslint/parser": "^6.3.0",
    "eslint": "^8.46.0",
    "eslint-plugin-jest": "^27.2.3",
    "eslint-plugin-prettier": "^5.0.0",
    "jest": "^29.6.2",
    "lint-staged": "^13.2.3",
    "nodemon": "^3.0.1",
    "prettier": "^3.0.1",
    "supertest": "^6.3.3",
    "testcontainers": "^10.1.0",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.1.6"
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.388.0",
    "@aws-sdk/s3-request-presigner": "^3.388.0",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "dotenv-vault": "^1.25.0",
    "eslint-plugin-prettier": "^5.0.0",
    "express": "^4.18.2",
    "express-mongo-sanitize": "^2.2.0",
    "express-validator": "^7.0.1",
    "helmet": "^7.0.0",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
    "sequelize": "^6.32.1",
    "sharp": "^0.32.4",
    "sqlite3": "^5.1.6",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.0",
    "uuid": "^9.0.0",
    "validator": "^13.11.0"
  }
}
